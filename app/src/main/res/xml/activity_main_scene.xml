<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetStart="@+id/start"
        motion:constraintSetEnd="@+id/end"
        motion:duration="2000"
        motion:motionInterpolator="linear"
        motion:pathMotionArc="startHorizontal">

        <OnSwipe
            motion:touchAnchorId="@+id/button"
            motion:touchAnchorSide="right"
            motion:dragDirection="dragRight" />
        <KeyFrameSet>

            <KeyPosition
                motion:motionTarget="@+id/button"
                motion:framePosition="15"
                motion:keyPositionType="pathRelative"
                motion:percentX="-0.1"
                motion:percentY="0"
                motion:pathMotionArc="startVertical" />
            <KeyPosition
                motion:motionTarget="@+id/button"
                motion:framePosition="5"
                motion:keyPositionType="pathRelative"
                motion:percentX="0.040"
                motion:percentY="-0.03"
                motion:pathMotionArc="startVertical"
                motion:drawPath="path" />
            <KeyPosition
                motion:motionTarget="@+id/button"
                motion:framePosition="10"
                motion:keyPositionType="pathRelative"
                motion:percentX="0"
                motion:percentY="-0.075"
                motion:pathMotionArc="startHorizontal" />
            <KeyPosition
                motion:motionTarget="@+id/button"
                motion:framePosition="4030"
                motion:keyPositionType="pathRelative"
                motion:percentX="0.5"
                motion:percentY="0" />
            <KeyPosition
                motion:motionTarget="@+id/button"
                motion:framePosition="20"
                motion:keyPositionType="pathRelative"
                motion:percentX="0.0"
                motion:percentY="0.1"
                motion:pathMotionArc="startHorizontal" />
            <KeyPosition
                motion:motionTarget="@+id/button"
                motion:framePosition="25"
                motion:keyPositionType="pathRelative"
                motion:percentX="0.158"
                motion:percentY="0"
                motion:pathMotionArc="startVertical" />
            <KeyPosition
                motion:motionTarget="@+id/button"
                motion:framePosition="30"
                motion:keyPositionType="pathRelative"
                motion:percentX="0"
                motion:percentY="-0.2"
                motion:pathMotionArc="startHorizontal" />
            <KeyPosition
                motion:motionTarget="@+id/button"
                motion:framePosition="35"
                motion:keyPositionType="pathRelative"
                motion:percentX="-0.2"
                motion:percentY="0"
                motion:pathMotionArc="startVertical" />
            <KeyPosition
                motion:motionTarget="@+id/button"
                motion:framePosition="40"
                motion:keyPositionType="pathRelative"
                motion:percentX="0"
                motion:percentY="0.2"
                motion:pathMotionArc="startHorizontal" />
            <KeyPosition
                motion:motionTarget="@+id/button"
                motion:framePosition="45"
                motion:keyPositionType="pathRelative"
                motion:percentX="0.26"
                motion:pathMotionArc="startVertical" />
            <KeyPosition
                motion:motionTarget="@+id/button"
                motion:framePosition="50"
                motion:keyPositionType="pathRelative"
                motion:percentX="0"
                motion:percentY="-0.3"
                motion:pathMotionArc="startHorizontal" />
            <KeyPosition
                motion:motionTarget="@+id/button"
                motion:framePosition="55"
                motion:keyPositionType="pathRelative"
                motion:percentX="-0.3"
                motion:percentY="0"
                motion:pathMotionArc="startVertical" />
            <KeyPosition
                motion:motionTarget="@+id/button"
                motion:framePosition="60"
                motion:keyPositionType="pathRelative"
                motion:percentX="0"
                motion:percentY="0.3"
                motion:pathMotionArc="startHorizontal" />
            <KeyPosition
                motion:motionTarget="@+id/button"
                motion:framePosition="065"
                motion:keyPositionType="pathRelative"
                motion:percentX="0.35"
                motion:percentY="0" />


        </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/button"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginStart="172dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintVertical_bias="0.499"
            android:layout_marginLeft="172dp" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/button"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginEnd="8dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintTop_toTopOf="parent" />
    </ConstraintSet>

</MotionScene>
